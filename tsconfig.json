{
  "compilerOptions": {
    "target": "ES3",
    "lib": ["ESNext", "DOM"],
    "outDir": "ts-dist",
    "module": "umd",
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
